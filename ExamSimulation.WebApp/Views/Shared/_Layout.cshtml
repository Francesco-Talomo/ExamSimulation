<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["TypeUser"] != null)
                    {
                        switch (Session["TypeUser"].ToString())
                        {
                            case "Organizzatore":
                                <li>
                                    @Html.ActionLink("Users", "Index", "User", new { area = "" }, new { @class = "" })
                                </li>
                                <li>
                                    @Html.ActionLink("Activity", "ActivityIndex", "Activity", new { area = "" }, new { @class = "" })
                                </li>
                                break;
                            default:
                                break;
                        }
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Activity", "Index", "Activity", new { area = "" }, new { @class = "" })
                        </li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @if (Session["TypeUser"] != null)
                        {
                            @Html.ActionLink("Log out", "Logout", "Login", new { area = "" }, new { @class = "navbar-right" })
                        }
                        else
                        {
                            @Html.ActionLink("Log in", "Index", "Login", new { area = "" }, new { @class = "navbar-right" })
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>